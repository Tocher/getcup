{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "jsx": "react",
    "strict": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": ["./src/"],
  "lib": [
    "es5",
    "es6",
    "es7",
    "es2015",
    "es2016",
    "es2017",
    "esnext",
    "dom"
  ]
}
