{
  "name": "Transaction",
  "plural": "transactions",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "timestamp": {
      "type": "date",
      "required": true
    }
  },
  "validations": [],
  "relations": {
    "owner": {
      "type": "belongsTo",
      "model": "user",
      "foreignKey": "userId"
    },
    "subscription": {
      "type": "belongsTo",
      "model": "Subscription",
      "foreignKey": "subscriptionId"
    },
    "place": {
      "type": "belongsTo",
      "model": "Place",
      "foreignKey": "placeId"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    }
  ],
  "methods": {
    "createTransaction": {
      "accepts": [
        {
          "arg": "req",
          "type": "object",
          "http": {
            "source": "req"
          }
        }
      ],
      "returns": {
        "arg": "status",
        "type": "string",
        "root": true
      },
      "http": {
        "path": "/create",
        "verb": "post"
      }
    }
  }
}
