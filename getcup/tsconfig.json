{
  "compilerOptions": {
    "target": "es2017",
    "lib": [
      "es6",
      "esnext.asynciterable"
    ],
    "baseUrl": "./",
    "module": "commonjs",
    "noEmit": true,
    //"noImplicitAny": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "react"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./src/**/*"
  ],
  "lib": [
    "es5",
    "es6",
    "es7",
    "es2015",
    "es2016",
    "es2017",
    "esnext",
    "dom"
  ]
}
